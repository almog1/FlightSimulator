<UserControl x:Class="FlightSimulator.Views.MyFlightBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator.Views"
        mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button  Name="ConnectButton" Content="Connect" Command="{Binding Path=ConnectCommand}" Height="40" Width="120"  Margin="5" HorizontalAlignment="Right" 
                 FontSize="16" FontWeight="Bold" Grid.Row="0" Grid.Column="0"/>

        <Button  Name="SettingsButton" Content="Settings" Command="{Binding Path=SettingsCommand}" Height="40" Width="120"  Margin="5" HorizontalAlignment="Left" 
                 FontSize="16" FontWeight="Bold" Grid.Row="0" Grid.Column="1" Click="SettingsButton_Click"/>

        <local:FlightBoard Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="1"></local:FlightBoard>
    </Grid>
</UserControl>
